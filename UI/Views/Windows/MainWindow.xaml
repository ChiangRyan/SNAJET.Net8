<Window x:Class="SANJET.UI.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="Manual"
        Left="0"  
        Top="0"    
        Height="1080"
        Width="1920"
        Title="SJ_SCADA_1.0.0" 
        WindowStyle="SingleBorderWindow"  
        WindowState="Maximized">

    <Window.Resources>
        <ImageBrush x:Key="BackgroundImage" ImageSource="pack://application:,,,/UI/Resources/Images/background.png" Stretch="UniformToFill"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <!-- 工具欄 -->
            <RowDefinition Height="Auto"/>
            <!-- 新增按鈕列 -->
            <RowDefinition Height="*"/>
            <!-- 主內容區域 -->
        </Grid.RowDefinitions>

        <!-- 工具欄 -->
        <Border Grid.Row="0" 
                BorderBrush="#555555" 
                BorderThickness="0,0,0,1" 
                CornerRadius="25">
            <Border.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.AppWorkspaceColorKey}}"/>
            </Border.Background>

            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- 左側按鈕區域 -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- 右側按鈕區域 -->
                </Grid.ColumnDefinitions>

                <!-- 左側按鈕 -->
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- 空白區域 -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- 首頁 -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- 手動操作 -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- 顯示器 -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- 警告 -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- 設置 -->
                    </Grid.ColumnDefinitions>
                    <Grid.Resources>
                        <Style x:Key="ToolBarRadioButtonStyle" TargetType="RadioButton">
                            <Setter Property="MinWidth" Value="120"/>
                            <Setter Property="MinHeight" Value="80"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border x:Name="border" 
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="20">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#FF8C00"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#666666"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Grid.Resources>
                    <RadioButton Grid.Column="1" GroupName="Navigation" 
                                 Style="{StaticResource ToolBarRadioButtonStyle}" 
                                 ToolTip="首頁" Command="{Binding NavigateHomeCommand}" 
                                 Margin="5" IsChecked="{Binding IsHomeSelected}" 
                                 Visibility="{Binding CanViewHome, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Path Fill="White" Stretch="Fill" Width="60" Height="60" Stroke="Transparent" 
                              Data="M 72,83.4219 C 72,58.843795 72,58.843795 68.667743,58.421899 64.653106,57.913606 103.35579,26.666668 108,26.666668 c 4.61444,0 43.34929,31.246449 39.362,31.75236 -3.30251,0.419026 -3.30251,0.419026 -3.66559,24.666668 -0.36308,24.247644 -0.36308,24.247644 -10.24559,24.643744 -12.06194,0.48346 -12.07052,0.47294 -12.09707,-14.832001 -0.0248,-14.27798 -3.52501,-19.564103 -12.95451,-19.564103 -10.60987,0 -15.065907,7.085804 -15.065907,23.957176 C 93.333333,108 93.333333,108 82.666667,108 72,108 72,108 72,83.4219 Z"/>
                    </RadioButton>
                    
                    <RadioButton Grid.Column="5" GroupName="Navigation" 
                                 Style="{StaticResource ToolBarRadioButtonStyle}" 
                                 ToolTip="設置"
                                 Margin="5" IsChecked="{Binding IsSettingSelected}" 
                                 Visibility="{Binding CanViewSettings, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Path Fill="White" Stretch="Fill" Width="60" Height="60" Stroke="Transparent" Data=""/>
                        
                    </RadioButton>
                </Grid>

                <!-- 右側按鈕區域 -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top" 
                            Margin="0,10,20,0">
                    <Button x:Name="LoginButton" 
                            Content="登入" 
                            Command="{Binding ShowLoginCommand}" 
                            Width="100" 
                            Height="40" 
                            Margin="5"
                            Visibility="{Binding IsLoggedIn, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#2ECC71"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" 
                                                    Background="{TemplateBinding Background}" 
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="LogoutButton" 
                            Content="登出" 
                            Command="{Binding LogoutCommand}" 
                            Width="100" 
                            Height="40" 
                            Margin="5"
                            Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#E74C3C"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" 
                                                    Background="{TemplateBinding Background}" 
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 新增按鈕列 -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    Height="30"
                    VerticalAlignment="Center"
                    Visibility="{Binding CanAll, Converter={StaticResource BooleanToVisibilityConverter}}">
      
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem>
                    <TextBlock Text="{Binding Esp32ConnectionStatus}" />
                </StatusBarItem>
            </StatusBar>
            
        </StackPanel>

        <!-- 主內容區域 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="73*"/>
                <ColumnDefinition Width="567*"/>
            </Grid.ColumnDefinitions>
            <Frame x:Name="MainContentFrame" NavigationUIVisibility="Hidden" Grid.ColumnSpan="2" Background="Transparent"/>
            
            <ListBox ItemsSource="{Binding Esp32Devices}" SelectedItem="{Binding SelectedEsp32Device}" Grid.Column="2" Width="500">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding DeviceId}" Margin="5"/>
                            <TextBlock Text="{Binding ConnectionStatus}" Margin="5"/>
                            <TextBlock Text="{Binding IpAddress}" Margin="5"/>
                            <ToggleButton IsChecked="{Binding IsLedOn}"
                              Command="{Binding Path=DataContext.ToggleLedCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                              CommandParameter="{Binding}"
                              Content="LED" Margin="5"
                              IsEnabled="{Binding Path=DataContext.CanControlDevice, RelativeSource={RelativeSource AncestorType=Window}}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
        </Grid>
    </Grid>
</Window>